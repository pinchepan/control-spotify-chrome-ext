{
  "manifest_version": 2,

  "name": "Control Spotify",
  "description": "Play and pause Spotify.",
  "version": "1.0",
  
  "content_scripts": [
    {
      "matches": ["https://play.spotify.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["inject.js"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "pause.png"
  }
}
